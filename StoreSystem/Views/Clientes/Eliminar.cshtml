@model Clientes
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Eliminar Cliente
    </div>
    <div class="card-body">

        <form asp-action="Eliminar" asp-controller="Clientes" method="post">

            <input asp-for="id_cliente" type="hidden" class="form-control">


            <div class="alert alert-danger" role="alert">
                ¿Desea Eliminar al Cliente: @Html.DisplayTextFor(m => m.nombre_cliente) ?
            </div>


            <button type="submit" class="btn btn-primary"><i class="bi bi-trash"></i> Eliminar</button>
            <a asp-action="Listar" asp-controller="Clientes" class="btn btn-warning"> <i class="bi bi-list-ul"></i> Volver a la lista</a>
        </form>
    </div>
</div>

